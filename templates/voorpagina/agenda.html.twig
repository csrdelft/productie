<h2 class="h6 fw-bolder mt-1">
	<a href="{{ url('csrdelft_agenda_maand') }}"  title="Agenda">Agenda</a>
</h2>

<div class="list-group list-group-flush">
	{% for group in groups %}
	<div class="list-group-item">
		<h3 class="agenda-item-dag fw-bolder text-black-50 text-uppercase">
			{{ date(group.beginMoment) | datetime_format_long }}
		</h3>
		{% for item in group.items %}
		<div class="list-group-item list-group-item-action d-flex flex-row align-items-baseline p-0 border-0">
			<p class="agenda-item-moment">
				{{ date(item.beginMoment) | time_format }}
			</p>
			<div class="agenda-item-titel flex-grow-1">
				<a href="{% if item.url is not null %}{{ item.url }}{% else %}/agenda{% endif %}" title="{{ item.beschrijving }}" class="w-100">
					<p class="w-100 text-truncate">{{ item.titel }}</p>
				</a>

				{% if item is maaltijd %}
					{{ include('voorpagina/agenda_maaltijd_ketzer.html.twig', {maaltijd: item}) }}
				{% endif %}
			</div>
		</div>
		{% endfor %}
  	</div>
	{% endfor %}
</div>

